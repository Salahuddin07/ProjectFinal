            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:text="Comilla"
            />

        <Button
            android:id="@+id/chandpurDistrictId"
            android:layout_width="match_parent"
            android:layout_height="55dp"
